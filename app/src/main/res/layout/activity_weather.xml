<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherActivity"
    android:orientation="vertical"
    android:background="#06498A"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_file"
            android:hint="Enter City Name :"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:padding="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableStart="@drawable/location_city"
            android:layout_marginStart="25dp"
            android:id="@+id/editTextCityName"
            android:inputType="textPersonName"
            >
        </EditText>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/search"
            android:layout_marginStart="7dp"
            android:id="@+id/searchButtonWeather"
            >
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear_layout_weather"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCityWeather"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            android:text="London ,GB"
            android:textSize="30sp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/sun1"
                android:layout_marginStart="25dp"
                android:scaleType="fitXY"
                android:id="@+id/imageViewWeather"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
                <TextView
                    android:id="@+id/temperatureWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:text="35 C"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewWeatherCondititon"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:text="Few Clouds"
                    />


            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/detailsWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details :"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max. Temp."
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min. Temp."
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pressure"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wind"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                >
                <TextView
                    android:id="@+id/humidityWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 50%"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/maxTempWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 50%"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/minTempWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 50%"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/pressureWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 50%"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/windWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 50%"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>